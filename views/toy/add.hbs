<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Toy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body { display: flex; justify-content: center; align-items: center;
      height: 100vh; background-color: #f8f9fa; margin: 0; } .navbar {
      background-color: rgba(0, 0, 0, 0.5); border-radius: 0; padding: 10px;
      position: fixed; top: 0; left: 0; width: 100%; z-index: 1000; /* Ensure
      navbar is on top of other content */ height: 6%; } .navbar .nav-link,
      .navbar-brand { color: white; } .navbar .nav-link:hover,
      .navbar-brand:hover { color: #ffc107; } .container { max-width: 600px; }
      .card { border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card bg-light p-4">
        <form action="/toy/add" method="post">
          <h1 class="alert alert-warning text-uppercase">Add New Toy</h1>
          <div class="form-group mt-3">
            <label class="text text-danger fw-bold">Toy Name</label>
            <input
              class="form-control"
              type="text"
              placeholder="Enter Toy name"
              name="name"
              required
            />
          </div>
          <div class="form-group mt-3">
            <label class="text text-danger fw-bold">Category</label>
            <select class="form-control" name="category">
              {{#each categories}}
                <option value="{{_id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group mt-3">
            <label class="text text-danger fw-bold">Origin</label>
            <select class="form-control" name="origin">
              {{#each origins}}
                <option value="{{_id}}">{{country}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group mt-3">
            <label class="text text-danger fw-bold">Toy Description</label>
            <textarea
              class="form-control"
              name="description"
              placeholder="Enter toy description"
              required
            ></textarea>
          </div>
          <div class="form-group mt-3">
            <label class="text text-danger fw-bold">Toy Price</label>
            <input
              class="form-control"
              type="number"
              name="price"
              placeholder="Enter Toy price"
            />
          </div>
          <div class="form-group mt-3">
            <label class="text text-danger fw-bold">Toy Cover</label>
            <input
              class="form-control"
              type="url"
              name="cover"
              placeholder="Enter Toy cover url"
              required
            />
          </div>
          <div class="form-group mt-3 mb-3">
            <input class="btn btn-success w-100" type="submit" value="Add" />
          </div>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+GlB1BxZCf5C6V4COm9n5paUefb1a"
      crossorigin="anonymous"
    ></script>
  </body>
</html>